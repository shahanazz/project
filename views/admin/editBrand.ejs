<%- include('partials/header')%>
<body class="with-welcome-text">
    <div class="container-scroller">
      
      <!-- partial:partials/_navbar.html -->
      <%- include('partials/navbar')%>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_sidebar.html -->
        <%- include('partials/sidebar')%>
        <!-- partial -->

        <div class="main-panel">
            <div class="content-wrapper">
            <div class="col-md-6 grid-margin stretch-card">

                <div class="card">
                    <div class="card-body">
                      <h4 class="card-title"></h4>Edit Brand</h4>

                      <form class="forms-sample material-form" id="categoryForm" action="/admin/editBrand?id=<%= brands._id %>" method="post">
                        <%
                    if(typeof message !== 'undefined'){
                      %>
                      <h4><%= message %> </h4>
                      <%
                    }
                     %>

                      <div class="form-group">
                        <input type="text" required="required" name="brandName" 
                        value="<%= brands.
                        brandName%>"
                        id="brand"/>
                        <label for="input" class="control-label">Brand Name</label><i class="bar"></i>
                        <div id="error1" class="error-message"></div>
                      </div>

                      
                      
                        <button type="submit" class="button btn btn-primary"><span>Update</span></button>
                      </div>
                    </div>
                </div>
            </div>
        </div>
    </div> 
 </body>


 <%- include('partials/footer')%>
