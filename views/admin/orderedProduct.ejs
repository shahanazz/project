<%- include('partials/header')%>

<body class="with-welcome-text">
    <div class="container-scroller">
      
      <!-- partial:partials/_navbar.html -->
      <%- include('partials/navbar')%>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_sidebar.html -->
        <%- include('partials/sidebar')%>
        <!-- partial -->

        <div class="main-panel">
            <div class="content-wrapper">
                <div class="row mt-5">
                    <div class="col-12 grid-margin">
                      <div class="card">
                        <div class="card-body">
                        
                          <div class="table-responsive">
                            <table class="table">
                              <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>total</th>
                                    <th>productLeft</th>
                                </tr>
                              </thead>
                              <tbody>
                                <% for ( let items of orderedproducts.products ){ %>
                                   
                                    <tr>
                                        <td>
                                            <img style="width:100px; height: auto;border-radius: 0;" src="/productImages/<%= items.productId.image[0] %>" alt="">
                                        </td>
                                    <td><%= items.productId.productname %></td>
                                  
                                    <td><%= items.price %></td>
                                    <td><%= items.quantity %></td>
                                    <td><%=  items.price%></td>

                                    <td><%=  items.productId.quantity%></td>
                                    </tr>
        
                                <% } %>
                              
                              </tbody>
                            </table>

                            <!-- Display the full address details -->
                            <div style="border: 1px solid #ddd; padding: 15px; border-radius: 5px; background-color: #f9f9f9; max-width: 400px; margin: 0 auto;">
                              <p><strong><u>Address:</u></strong></p>
                              <p><strong>Username: </strong> <%= orderedproducts.address.username %></p>
                              <p><strong>Mobile: </strong> <%= orderedproducts.address.mobile %></p>
                              <p><strong>Email:</strong> <%= orderedproducts.address.email %></p>
                              <p><strong>Landmark:</strong> <%= orderedproducts.address.landmark %></p>
                              <p><strong>House Name:</strong> <%= orderedproducts.address.houseName %></p>
                              <p><strong>City:</strong> <%= orderedproducts.address.city %></p>
                              <p><strong>State:</strong> <%= orderedproducts.address.state %></p>
                              <p><strong>Country:</strong> <%= orderedproducts.address.country %></p>
                              <p><strong>Pincode:</strong> <%= orderedproducts.address.pincode %></p>
                            </div>
                            
                            
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                  </div>
                </div>
      </div>
    </div>
</body>


<%- include('partials/footer')%>