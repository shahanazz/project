<%- include('partials/header')%>

<body class="with-welcome-text">
    <div class="container-scroller">
      
      <!-- partial:partials/_navbar.html -->
      <%- include('partials/navbar')%>
      <!-- partial -->
      <div class="container-fluid page-body-wrapper">
        <!-- partial:partials/_sidebar.html -->
        <%- include('partials/sidebar')%>
        <!-- partial -->

        <div class="main-panel">
          <div class="content-wrapper">
           <a href="/admin/addCategory"> <button class="btn btn-primary">Add Category</button></a>
           <br><br>
           <!-- <div>
            <button class="btn btn-primary btn-lg text-white mb-0 me-0" type="button"><i class="mdi mdi-account-plus"></i>Add Category</button>
          </div> -->
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                  <div class="card-body">
                    <h4 class="card-title">Category List</h4>
                    <p class="card-description"> Add class
                    </p>
                    <div class="table-responsive">
                      <table class="table table-striped">
                        <thead>
                          <tr>
                            <th> category </th>
                            <th> description </th>
                              <th>Offer</th>
                            <th> Status </th>
                          
                          </tr>
                        </thead>
                        <tbody>
                            <% 
                            if(categories.length >0){
  
                              for(let i=0; i < categories.length; i++){
                              %>
                          <tr>
                            <td > <%= categories[i].category %></td>
                            <td>  <%= categories[i].description  %> </td>
                            <td> <%= categories[i].categoryOffer %>%</td>
                            <td>  <%= categories[i].status ?  'Listed' : 'Unlisted' %> </td>
                            <td class="text-end">
                                <a href="/admin/editCategory?id=<%= categories[i]._id %>" class="btn btn-sm btn-success" >Edit</a>
                                <a href="/admin/deleteCategory?id=<%= categories[i]._id%>">
                                <button type="button" class="btn btn-sm btn-square btn-danger text-danger-hover">
                                   Unlist
                                </button>
                              </a>
                            </td>
                            
                          </tr>

                          <% }%>
                          <% }else{
                               %>
                               <tr>
                                   <td colspan="5"> category not found</td>
                               </tr>
                   
                                 <%
                               }
                               %>
                   
                          
                        </tbody>
                      </table>
                    </div>
<br><br>
                    <nav aria-label="Page navigation example">
                      <ul class="pagination">
                        <% if (currentPage > 1) { %>
                          <li class="page-item">
                            <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                          </li>
                        <% } else { %>
                          <li class="page-item disabled">
                            <a class="page-link" href="#">Previous</a>
                          </li>
                        <% } %>
                    
                        <% for (let j = 1; j <= totalPages; j++) { %>
                          <li class="page-item <%= (j === currentPage) ? 'active' : '' %>">
                            <a class="page-link" href="?page=<%= j %>"><%= j %></a>
                          </li>
                        <% } %>
                    
                        <% if (currentPage < totalPages) { %>
                          <li class="page-item">
                            <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                          </li>
                        <% } else { %>
                          <li class="page-item disabled">
                            <a class="page-link" href="#">Next</a>
                          </li>
                        <% } %>
                      </ul>
                    </nav>

                    
                  </div>
                  
                </div>

                
              </div>
    </div>
  </div>

  

  <%- include('partials/footer')%>
</body>        