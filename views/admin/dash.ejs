<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="/path/to/your/custom.css">
    <style>
        .dashboard-card {
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }
        .dashboard-card .card-header {
            background-color: #007bff;
            color: white;
        }
        .dashboard-card .card-body {
            background-color: #f8f9fa;
        }
        .dashboard-card .card-footer {
            background-color: #e9ecef;
        }
        .chart-container {
            position: relative;
            height: 300px;
        }
    </style>
</head>
<body>
    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Header -->
            <div class="col-12 mb-4">
                <h1 class="text-center">Admin Dashboard</h1>
            </div>
        </div>
        <div class="row">
            <!-- Profit Card -->
            <div class="col-md-4 mb-4">
                <div class="card dashboard-card">
                    <div class="card-header">
                        <h4>Current Year Profit</h4>
                    </div>
                    <div class="card-body text-center">
                        <p class="h3">${currentYearProfit[0] ? currentYearProfit[0].profit.toFixed(2) : '0.00'}</p>
                    </div>
                    <div class="card-footer text-muted">
                        Total profit for the current year.
                    </div>
                </div>
            </div>

            <!-- Monthly Earnings Card -->
            <div class="col-md-4 mb-4">
                <div class="card dashboard-card">
                    <div class="card-header">
                        <h4>Monthly Earnings</h4>
                    </div>
                    <div class="card-body text-center">
                        <p class="h3">${monthlyEarning[0] ? monthlyEarning[0].earning.toFixed(2) : '0.00'}</p>
                    </div>
                    <div class="card-footer text-muted">
                        Total earnings for the current month.
                    </div>
                </div>
            </div>

            <!-- Total Revenue Card -->
            <div class="col-md-4 mb-4">
                <div class="card dashboard-card">
                    <div class="card-header">
                        <h4>Total Revenue</h4>
                    </div>
                    <div class="card-body text-center">
                        <p class="h3">${revenue[0] ? revenue[0].revenue.toFixed(2) : '0.00'}</p>
                    </div>
                    <div class="card-footer text-muted">
                        Total revenue from all orders.
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders Summary -->
        <div class="row mb-4">
            <div class="col-md-3 mb-4">
                <div class="card dashboard-card">
                    <div class="card-header bg-warning text-white">
                        <h4>Pending Orders</h4>
                    </div>
                    <div class="card-body text-center">
                        <p class="h3">${pendingOrder}</p>
                    </div>
                    <div class="card-footer text-muted">
                        Orders yet to be processed.
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card dashboard-card">
                    <div class="card-header bg-success text-white">
                        <h4>Placed Orders</h4>
                    </div>
                    <div class="card-body text-center">
                        <p class="h3">${placedOrder}</p>
                    </div>
                    <div class="card-footer text-muted">
                        Orders that have been placed.
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card dashboard-card">
                    <div class="card-header bg-danger text-white">
                        <h4>Cancelled Orders</h4>
                    </div>
                    <div class="card-body text-center">
                        <p class="h3">${cancelledOrder}</p>
                    </div>
                    <div class="card-footer text-muted">
                        Orders that have been cancelled.
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-4">
                <div class="card dashboard-card">
                    <div class="card-header bg-info text-white">
                        <h4>Delivered Orders</h4>
                    </div>
                    <div class="card-body text-center">
                        <p class="h3">${deliveredOrder}</p>
                    </div>
                    <div class="card-footer text-muted">
                        Orders that have been delivered.
                    </div>
                </div>
            </div>
        </div>

        <!-- Product and Category Count -->
        <div class="row mb-4">
            <div class="col-md-6 mb-4">
                <div class="card dashboard-card">
                    <div class="card-header bg-primary text-white">
                        <h4>Total Products</h4>
                    </div>
                    <div class="card-body text-center">
                        <p class="h3">${countProduct}</p>
                    </div>
                    <div class="card-footer text-muted">
                        Total number of products available.
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card dashboard-card">
                    <div class="card-header bg-secondary text-white">
                        <h4>Total Categories</h4>
                    </div>
                    <div class="card-body text-center">
                        <p class="h3">${categoryCount}</p>
                    </div>
                    <div class="card-footer text-muted">
                        Total number of product categories.
                    </div>
                </div>
            </div>
        </div>

        <!-- Charts -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card dashboard-card">
                    <div class="card-header bg-dark text-white">
                        <h4>User Registrations by Month</h4>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="userChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card dashboard-card">
                    <div class="card-header bg-dark text-white">
                        <h4>Sales by Month</h4>
                    </div>
                    <div class="card-body">
                        <div class="chart-container">
                            <canvas id="salesChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Latest Orders and Users -->
        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card dashboard-card">
                    <div class="card-header bg-light">
                        <h4>Latest Orders</h4>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <% latestOrder.forEach(order => { %>
                                <li class="list-group-item">
                                    Order ID: <%= order._id %> - Total: $<%= order.totalPrice.toFixed(2) %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="col-md-6 mb-4">
                <div class="card dashboard-card">
                    <div class="card-header bg-light">
                        <h4>Latest Users</h4>
                    </div>
                    <div class="card-body">
                        <ul class="list-group">
                            <% latestUsers.forEach(user => { %>
                                <li class="list-group-item">
                                    User ID: <%= user._id %> - Email: <%= user.email %>
                                </li>
                            <% }) %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctxUser = document.getElementById('userChart').getContext('2d');
        new Chart(ctxUser, {
            type: 'bar',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                datasets: [{
                    label: 'User Registrations',
                    data: <%= JSON.stringify(userData) %>,
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        const ctxSales = document.getElementById('salesChart').getContext('2d');
        new Chart(ctxSales, {
            type: 'line',
            data: {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                datasets: [{
                    label: 'Sales',
                    data: <%= JSON.stringify(salesData) %>,
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderColor: 'rgba(75, 192, 192, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
</body>
</html>
